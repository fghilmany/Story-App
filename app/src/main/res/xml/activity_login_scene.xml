<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/image_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="126dp"
            android:layout_height="126dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.18"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/image_logo"
            android:alpha="1"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" />
        <Constraint
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/til_email"
            android:alpha="1"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" />
        <Constraint
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/til_password"
            android:alpha="1"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/splash" >
        <Constraint
            android:id="@+id/image_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.5" />
        <Constraint
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/image_logo"
            android:alpha="0"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/til_email"
            android:alpha="0"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/til_password"
            android:alpha="0"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/tv_or"
            motion:layout_constraintEnd_toEndOf="@id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/bt_login"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@id/bt_login"
            android:layout_marginTop="4dp" />
        <Constraint
            android:id="@+id/tv_register"
            motion:layout_constraintEnd_toEndOf="@id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_or"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@id/bt_login"
            android:layout_marginTop="4dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end_splash" >
        <Constraint
            android:id="@+id/image_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="126dp"
            android:layout_height="126dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.5"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/image_logo"
            android:alpha="0"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/til_email"
            android:alpha="0"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/til_password"
            android:alpha="0"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/tv_or"
            motion:layout_constraintEnd_toEndOf="@id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/bt_login"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@id/bt_login"
            android:layout_marginTop="4dp" />
        <Constraint
            android:id="@+id/tv_register"
            motion:layout_constraintEnd_toEndOf="@id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_or"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@id/bt_login"
            android:layout_marginTop="4dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/splash"
        motion:constraintSetEnd="@+id/end_splash"
        motion:autoTransition="animateToEnd"
        motion:duration="2000" />
    <Transition
        motion:constraintSetStart="@+id/end_splash"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="animateToEnd"
        motion:duration="500" />
</MotionScene>